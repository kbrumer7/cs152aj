<div class="jumbotron text-center">
  <div class="container">
    <h2>Public Forum</h2>
    <p>Read posts from others about Coronavirus in their area, and create your own post!</p>
    <a href="/createPost">
      <span class="button">Create post</span>
    </a>
  </div>
</div>


<div class="container">
  <div class="row row-cols-1 row-cols-md-3">
      <% forum.forEach(forum => {%>
        <div class="col-md-4">
          <div class="card border-dark mb-4">
            <div class="card-body">
              <h3 class="card-title"><%= forum.title %> in <%= forum.state %></h3>
              <h5 class="card-subtitle mb-2 text-muted">By <%= forum.name %> on <%= forum.date %></h5>
              <p class="card-text"><%= forum.body %></p>
              <a class="card-link" href="#">Learn more about this state &raquo;</a>
            </div>
          </div>
        </div>
      <% }) %>
  </div>
</div>



